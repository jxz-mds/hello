#include <iostream>
#include <cstring>
#define LL long long
int n, k;
int a[1000001]; 
void init()
{
    int t;
    memset(a, 0, sizeof(a));
    std::cin >> n >> k;
    for (int i = 0; i < n; i++)
    {
        std::cin >> t;
        a[t % k]++; 
    }
}
void work()
{
    LL ans = 0;
    for (int i = 0; i < k; i++)
    {
        int j = (k - i) % k;
        if (j < i)
            break;
        else if (j == i)
            ans += 1LL * a[i] * (a[i] - 1) / 2;
        else
            ans += 1LL * a[i] * a[j];
    }
    std::cout << ans <<std::endl;
}
int main()
{
    init();
    work();
    return 0;
}
